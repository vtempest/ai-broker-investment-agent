# Server Configuration
PORT=3000
NODE_ENV=development

# Redis Configuration (for BullMQ job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Research Bot APIs
PRIMO_AGENT_URL=http://localhost:8002
TRADING_AGENTS_URL=http://localhost:8001

# Database
DATABASE_PATH=./data/research-bot.db

# Job Scheduling
# Cron format: "minute hour day-of-month month day-of-week"
# Default: 9:35 AM EST (5 minutes after market open)
DAILY_ANALYSIS_CRON=35 9 * * 1-5

# Stocks to track (comma-separated)
CORE_STOCKS=AAPL,GOOGL,MSFT,NVDA,TSLA,META,AMZN,JPM,BAC,WMT

# Analysis Configuration
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT_MS=300000
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/research-bot.log
