{
  "trading": {
    "market_open_time": "09:30",
    "timezone": "America/New_York"
  },
  "portfolio": {
    "historical_context_count": 20
  },
  "news": {
    "significance_threshold": 0.7,
    "moderate_threshold": 0.4,
    "max_news_per_minute": 50,
    "sample_news_count": 30,
    "enable_firecrawl_extraction": true,
    "valid_sources": [
      "Fintel", 
      "InvestorPlace", 
      "Seeking Alpha", 
      "SeekingAlpha", 
      "Yahoo", 
      "CNBC", 
      "TipRanks", 
      "MarketWatch", 
      "The Fly", 
      "Benzinga", 
      "TalkMarkets", 
      "Stock Options Channel"
    ]
  },
  "models": {
    "portfolio_manager": {
      "provider": "groq",
      "model": "llama-3.1-70b-versatile",
      "temperature": 0.3,
      "comment": "Ultra-fast inference with Groq (750+ tokens/sec). Alternatives: llama-3.1-405b-reasoning, mixtral-8x7b-32768"
    },
    "nlp_features": {
      "provider": "groq",
      "model": "llama-3.1-70b-versatile",
      "temperature": 0.3,
      "comment": "Best balance of speed and quality for sentiment analysis"
    },
    "assess_significance": {
      "provider": "groq",
      "model": "llama-3.1-8b-instant",
      "temperature": 0.3,
      "comment": "Fastest option for quick classification tasks"
    },
    "enhanced_summary": {
      "provider": "groq",
      "model": "llama-3.1-70b-versatile",
      "temperature": 0.3,
      "comment": "High quality summaries at blazing speeds"
    }
  },
  "output": {
    "csv_path": "./output/csv",
    "reports_path": "./output/reports"
  }
} 